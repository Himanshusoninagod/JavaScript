(function ($, Drupal) {
  Drupal.behaviors.toggleClass = {
    attach: function (context, settings) {
      const bod = $('.bod', context);
      const geb = $('.geb', context);
      
      if (bod.length && geb.length) {
        bod.addClass('active-leadership-button');

        bod.on('click', function () {
          bod.addClass('active-leadership-button');
          geb.removeClass('active-leadership-button');
        });

        geb.on('click', function () {
          geb.addClass('active-leadership-button');
          bod.removeClass('active-leadership-button');
        });
      }
    }
  };
})(jQuery, Drupal);
